@article{ogrodnik_increased_2010,
	title = {Increased {Ca}$^{\textrm{2+}}$ leak and spatiotemporal coherence of {Ca}$^{\textrm{2+}}$ release in cardiomyocytes during beta-adrenergic stimulation.},
