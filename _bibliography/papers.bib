	author = {Potenza, Duilio Michele and Janicek, Radoslav and Fernandez-Tenorio, Miguel and Niggli, Ernst},
	year = {2020},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1113/JP278951},
	keywords = {Ca2+-induced Ca2+ release, cardiac muscle, de-phosphorylation, excitation–contraction coupling, protein phosphatase, ryanodine receptor 2},
