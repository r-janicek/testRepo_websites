	pages = {5091--5106},
	file = {Full Text PDF:/Users/rado/Zotero/storage/EYZECVJB/Janíček et al. - 2012 - Calcium spike variability in cardiac myocytes resu.pdf:application/pdf;Snapshot:/Users/rado/Zotero/storage/9525QTEV/jphysiol.2012.html:text/html},
}

@article{janicek_quantitative_2013,
	title = {Quantitative {Analysis} of {Calcium} {Spikes} in {Noisy} {Fluorescent} {Background}},
