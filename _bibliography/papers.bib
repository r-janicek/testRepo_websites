	urldate = {2022-09-16},
	journal = {Journal of Molecular and Cellular Cardiology},
	author = {Lopez, Ruben and Janicek, Radoslav and Fernandez-Tenorio, Miguel and Courtehoux, Marianne and Matas, Lluis and Gerbaud, Pascale and Gomez, Ana M. and Egger, Marcel and Niggli, Ernst},
	month = sep,
	year = {2022},
	keywords = {Calcium signaling, Arrhythmia, Catecholaminergic polymorphic ventricular tachycardia, Channelopathy, Ryanodine receptor, Sarcoplasmic reticulum calcium pump},
	pages = {1--14},
	file = {Full Text:/Users/rado/Zotero/storage/G9PAZRFT/Lopez et al. - 2022 - Uptake-leak balance of SR Ca2+ determines arrhythm.pdf:application/pdf;ScienceDirect Snapshot:/Users/rado/Zotero/storage/52NZN3FZ/S0022282822001043.html:text/html},
}

@article{keller_calcium_2007,
	title = {Calcium waves driven by “sensitization” wave-fronts},
	volume = {74},
	issn = {0008-6363},
	url = {https://doi.org/10.1016/j.cardiores.2007.02.006},
	doi = {10.1016/j.cardiores.2007.02.006},
	abstract = {Objective: Cellular Ca2+ waves are understood as reaction–diffusion systems sustained by Ca2+-induced Ca2+ release (CICR) from Ca2+ stores. Given the recently discovered sensitization of Ca2+ release channels (ryanodine receptors; RyRs) of the sarcoplasmic reticulum (SR) by luminal SR Ca2+, waves could also be driven by RyR sensitization, mediated by SR overloading via Ca2+ pump (SERCA), acting in tandem with CICR.Methods: Confocal imaging of the Ca2+ indicator fluo-3 was combined with UV-flash photolysis of caged compounds and the whole-cell configuration of the patch clamp technique to carry out these experiments in isolated guinea pig ventricular cardiomyocytes.Results: Upon sudden slowing of the SERCA in cardiomyocytes with a photoreleased inhibitor, waves indeed decelerated immediately. No secondary changes of Ca2+ signaling or SR Ca2+ content due to SERCA inhibition were observed in the short time-frame of these experiments.Conclusions: Our findings are consistent with Ca2+ loading resulting in a zone of RyR ‘sensitization’ traveling within the SR, but inconsistent with CICR as the predominant mechanism driving the Ca2+ waves. This alternative mode of RyR activation is essential to fully conceptualize cardiac arrhythmias triggered by spontaneous Ca2+ release.},
	number = {1},
	urldate = {2022-09-16},
	journal = {Cardiovascular Research},
	author = {Keller, Markus and Kao, Joseph P.Y. and Egger, Marcel and Niggli, Ernst},
	month = apr,
